{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "husky": "^8.0.0",
    "lint-staged": "^13.1.2",
    "lodash": "^4.17.21",
    "syncpack": "^9.8.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --cache --fix"
    ]
  },
  "scripts": {
    "lint": "yarn workspaces run lint",
    "check-mismatches": "syncpack list-mismatches",
    "fix-mismatches": "syncpack fix-mismatches",
    "prepare": "husky install",
    "bump": "yarn version --no-commit-hooks --no-git-tag-version",
    "version": "yarn workspaces run bump-to $npm_package_version"
  },
  "version": "0.0.25"
}
